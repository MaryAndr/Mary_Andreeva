<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">30dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="buttonStyle">@style/yourButtonStyle</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/defaultBorderColor</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="MyDialogFragmentTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="actionBarSize">30dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="buttonStyle">@style/yourButtonStyle</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/defaultBorderColor</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_shape</item>
    </style>


    <style name="MainPageTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="dialogTheme">@style/MainPageTheme</item>
        <item name="actionBarSize">60dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="buttonStyle">@style/yourButtonStyle</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/defaultBorderColor</item>
    </style>


    <style name="BottomNavigation">
        <item name="android:background">@color/bottonavbackcolor</item>
        <item name="itemIconTint">@drawable/bottomnav_color_selector</item>
        <item name="itemTextColor">@drawable/bottomnav_color_selector</item>
    </style>

    <style name="AppThemeWithABar" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="buttonStyle">@style/yourButtonStyle</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/defaultBorderColor</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="Widget.MyApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
    </style>


    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/text_input_box_stroke</item>
    </style>

<!--    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">-->
<!--        <item name="hintTextAppearance">@style/HintText</item>-->
<!--        <item name="android:paddingBottom">8dp</item>-->
<!--    </style>-->


    <style name="yourButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
